@model DeepakMishraWebAppMVC.Models.LoginFields

@{
    ViewBag.Title = "Loginpage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">
            <h4>Login Area</h4>

            <h5>Select Usertype and enter your credentials to access information.</h5>
            <p>Username is your registerd emailid</p>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Usertype, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model=>model.Usertype, new List<SelectListItem>
{
   new SelectListItem{ Text="-Please Select-", Value = "0" },
    new SelectListItem{ Text="MMC Employee Login", Value = "1" },
   new SelectListItem{ Selected=true, Text="Clients Login", Value = "2" }
}, new { id = "chosen" })
                    @Html.ValidationMessageFor(model => model.Usertype, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { placeholder = "Enter registered email id ", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { placeholder = "Enter password ", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.remember, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.remember)
                        @Html.ValidationMessageFor(model => model.remember, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
            @Html.ViewData["message"]
            <div class="form-group">

                <div class="col-sm-4 col-md-10">
                    @Html.ActionLink("New User? Click here to Register", "Register", "Register") |
                    @Html.ActionLink("Forgot Password?", "ResetPassword", "ForgotPassword") |
                    @Html.ActionLink("Forgot Username?", "RecoverUser", "RecoverUser")
                </div>


            </div>
        </div>
    </div>
    
}
<div>
    @*@Html.ActionLink("Back to List", "Index")*@
</div>
@section scripts{
    <script>
        $(function () {
            $("#chosen").chosen();
            //$("#chosen1").chosen();
        });
    </script>
}

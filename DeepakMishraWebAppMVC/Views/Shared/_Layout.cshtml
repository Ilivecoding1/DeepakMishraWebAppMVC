        <div class="back-top" style="position:fixed;right:5px;bottom:70px;opacity:0.8;"><a href="#top-row"><img src="~/Multimedia/Icons/up arrow.png" height="40" width="40" /></a></div>      
        <p>Copyright &copy; @DateTime.Now.Year M.M.C. Soft Systems.All rights reserved. | Developed and Maintained by M.M.C. Soft Systems.| <a href="~/QueryForm.aspx" target="_blank">...</a> </p>

    </footer>
     @*footer ends*@ 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

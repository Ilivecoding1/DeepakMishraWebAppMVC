                    <div class="text-left">@Html.ActionLink("Login", "Loginpage", "Login")</div>@*Text Function Controllername*@
                </div>

                <div class="text-left container-fluid col-md-3">
                    <h4 class="text-left"><u><strong style="color:#03c6fc">Our</strong></u><u> Presence</u></h4>

@model DeepakMishraWebAppMVC.Models.ResetPassword

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="container">
        <div class="form-horizontal">
            <h4>Reset Password</h4>

            <h5>Enter your email and click button to get a link to reset your password.</h5>
            <p>Use your registerd email id only to recover your password.</p>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder="Enter registered email id ", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create link for reset password" class="btn btn-primary" />
                </div>
            </div>
            @Html.ActionLink("Back to Login page", "Loginpage", "Login")
            <hr />
            <div class="form-group">
                <strong>Status</strong>
                @Html.ViewData["mailsent"]<br />
                @*<hr />
        <strong>mailnotsent</strong>
        @Html.ViewData["mailnotsent"]*@
            </div>
           
        </div>
    </div>
}

